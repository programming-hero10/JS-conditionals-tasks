/***

Ticket fare Calculator
    - Children (age < 10): free
    - Students get a 50% discount
    - Senior citizens (age >= 60) gets a 15% Discount
    - Otherwise Regular ticket fare 800 tk
*/
let age = 10;

let isStudent = 50;

let isSeniorCitizen = age >= 60;

function calculateTicketFare(age , isStudent, isSeniorCitizen) {
    let fare = 800;
    
    if (age < 10) {
        fare = 0;
        console.log("Free ticket for children");
    }
    
    if (isStudent) {
        fare *= 0.5;
        console.log("Student discount applied");
    }

    if (isSeniorCitizen) {
        fare *= 0.85;
        console.log("Senior citizen discount applied");
    }
    
    console.log(`Ticket fare: ${fare} tk`);
    
    return fare;
}
if(age < 10) {
    console.log("Free ticket for children");
}
else if (isStudent / 50){
    console.log("Student discount applied");
}
else if (isSeniorCitizen = (age >= 60 && age)){
    console.log("Senior citizen discount applied");
}
